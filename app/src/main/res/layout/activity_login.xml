<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="244dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/attherate" />

    <EditText
        android:id="@+id/etRegEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Email Address"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etRegPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Password"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/etRegEmail" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/key" />

    <Button
        android:id="@+id/btnRegLogin"
        android:layout_width="306dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:background="@color/colorsky"
        android:text="Login to My Account"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegPassword" />

    <Button
        android:id="@+id/btnRegForgotPassword"
        android:layout_width="181dp"
        android:layout_height="59dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorRed"
        android:text="Forgot Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegLogin" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="128dp"
        android:textColor="@color/colorYellow"
        android:text="don't have an account? create one here for free"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegForgotPassword" />

    <Button
        android:id="@+id/btnRegRegisternow"
        android:layout_width="159dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        android:background="@color/colorWhite"
        android:text="Register Now"
        android:textColor="@color/colorsky"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/btnRegForgotPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>